@model CadeteriaWeb.ViewModels.ClientesViewModels

<div>
    <h3>Editor de Clientes</h3>

   


<form  method="post">
    <label class="form-label" asp-for="@Model.Nombre"></label>
    <input class="form-control" asp-for="@Model.Nombre" value="@Model.Nombre"/> <br />
    <span asp-validation-for="@Model.Nombre" class="text-danger"></span>

    <label class="form-label" asp-for="@Model.Direccion"></label>
    <input class="form-control" asp-for="@Model.Direccion" value="@Model.Direccion"/> <br />
    <span asp-validation-for="@Model.Direccion" class="text-danger"></span>
    

    <label class="form-label" asp-for="@Model.Telefono"></label>
    <input class="form-control" asp-for="@Model.Telefono" value="@Model.Telefono"/> <br />
    <span asp-validation-for="@Model.Telefono" class="text-danger"></span>
    
    <button  class="btn btn-primary">Enviar</button>
</form>

</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> 
                   <link href="~/css/EditarClientes.css" rel="stylesheet" asp-file-version="true"> } 
@model CadeteriaWeb.ViewModels.ClientesViewModels
 
<div>
    <h3>Subida de Clientes</h3>

    <h5>Ingrese los datos del Cliente</h5>
   


<form  method="post">
    <label class="form-label" asp-for="@Model.Nombre"></label>
    <input class="form-control" asp-for="@Model.Nombre" placeholder="Ingrese el nombre del cliente"/> <br />
    

    <label class="form-label" asp-for="@Model.Direccion"></label>
    <input class="form-control" asp-for="@Model.Direccion" placeholder="Ingrese la direccion del cliente"/> <br />
    

    <label class="form-label" asp-for="@Model.Telefono"></label>
    <input class="form-control" asp-for="@Model.Telefono" placeholder="Ingrese la direccion del cliente"/> <br />
    

    
    <button  class="btn btn-primary">Enviar</button>
</form>

</div>
<style>
    body{
        font-family:Arial, Helvetica, sans-serif;
    }
    h3, h5{
        text-align: center;
    }
    header > h2{
        color: white;
        margin:0;
    }
    form{
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
        background-color: black;
    }
    label{
        color: white;
    }
    form label, form input,form select, form button{
        width: 90;
        max-width:25rem ;
        height: 2rem;
        margin-block: .2rem;
    }
</style>
@section Scripts { <partial name="_ValidationScriptsPartial" /> } 
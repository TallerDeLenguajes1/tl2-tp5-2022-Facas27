 @model CadeteriaWeb.ViewModels.CadetesViewModels

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CadeteriaWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cadetes" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cadetes" asp-action="FormAlta">SubirCadete</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cadetes" asp-action="MostrarCadetes">Mostrar Cadetes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cadetes" asp-action="ElimiarCadetes">Eliminar Cadetes</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cadetes" asp-action="EditarCadetes">Editar Cadetes</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
<div>
    <h3>Editor de Cadetes</h3>

   


<form  method="post">
    <label class="form-label" asp-for="@Model.Nombre"></label>
    <input class="form-control" asp-for="@Model.Nombre" value="@Model.Nombre" /> <br />
    <span class="form-control" asp-validation-for="@Model.Nombre" ></span>

    <label class="form-label" asp-for="@Model.Direccion"></label>
    <input class="form-control" asp-for="@Model.Direccion" value="@Model.Direccion"/>  <br />
    <span class="form-control" asp-validation-for="@Model.Direccion" ></span>

    <label class="form-label" asp-for="@Model.Telefono"></label>
    <input class="form-control" asp-for="@Model.Telefono" value="@Model.Telefono" /> <br/>
    <span class="form-control" asp-validation-for="@Model.Telefono" ></span>
    <button  class="btn btn-primary">Editar</button>
</form>

</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> } 